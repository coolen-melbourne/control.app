<body>
    <div class="nav">
        <a href="/user" class="nav-btn active">
            <i class="fas fa-tachometer-alt"></i> Nazorat Paneli
        </a>
        <a href="/grafik" class="nav-btn">
            <i class="fas fa-chart-bar"></i> Grafik
        </a>
        <a href="/database" class="nav-btn">
            <i class="fas fa-database"></i> Ma'lumotlar Bazasi
        </a>
    </div>

    <div class="container">
        <!-- Control Panel -->
        <div class="control-panel">
            <div class="header">
                <h1>Tikuv jarayonini nazorati</h1>
                <p>Bandlar va parametrlarni boshqarish paneli</p>
            </div>

            <div class="form-group">
                <label class="form-label">Kerakli bandni tanlang</label>
                <select id="bandSelect">
                    <option value="" selected disabled>Bandni tanlang</option>
                    <option value="1-band">1-band</option>
                    <option value="2-band">2-band</option>
                    <option value="3-band">3-band</option>
                    <option value="4-band">4-band</option>
                    <option value="5-band">5-band</option>
                    <option value="6-band">6-band</option>
                    <option value="7-band">7-band</option>
                    <option value="8-band">8-band</option>
                    <option value="9-band">9-band</option>
                    <option value="10-band">10-band</option>
                    <option value="11-band">11-band</option>
                    <option value="12-band">12-band</option>
                    <option value="13-band">13-band</option>
                    <option value="14-band">14-band</option>
                    <option value="Dazmol bandi">Dazmol bandi</option>
                    <option value="Upakovka bandi">Upakovka bandi</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Miqdor (son) kiriting</label>
                <input type="number" id="quantityInput" placeholder="Miqdorni kiriting" min="1" max="9999">
            </div>

            <div class="buttons">
                <button id="saveBtn" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Saqlash
                </button>
                <button id="editBtn" class="btn btn-edit" style="display: none;">
                    <i class="fas fa-edit"></i>
                    Yangilash
                </button>
                <button id="cancelBtn" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Bekor qilish
                </button>
            </div>
        </div>

        <!-- History Section -->
        <div class="history-section">
            <div class="history-header">
                <h2>Operatsiyalar tarixi</h2>
                <p>Barcha operatsiyalar va o'zgarishlar tarixi</p>
                
                <div class="history-controls">
                    <div class="history-filters">
                        <button class="filter-btn active" data-filter="all">Hammasi</button>
                        <button class="filter-btn" data-filter="added">Qo'shilgan</button>
                        <button class="filter-btn" data-filter="updated">Yangilangan</button>
                        <button class="filter-btn" data-filter="deleted">O'chirilgan</button>
                    </div>
                    <div class="history-info">
                        <span id="totalCount">{{history.length}} ta yozuv</span>
                    </div>
                </div>
            </div>

            <div class="history-table-container">
                <table class="history-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Vaqt</th>
                            <th>Band</th>
                            <th>Miqdor</th>
                            <th>Holat</th>
                            <th>Operatsiya</th>
                            <th>Harakatlar</th>
                        </tr>
                    </thead>
                    <tbody id="historyBody">
                        {{#each history}}
                        <tr>
                            <td>{{@index}}</td>
                            <td>{{this.date}}<br><small>{{this.time}}</small></td>
                            <td>{{this.band}}</td>
                            <td><strong>{{this.quantity}} ta</strong></td>
                            <td>
                                {{#if (eq this.status 'added')}}
                                <span class="status-badge status-added">Qo'shildi</span>
                                {{else if (eq this.status 'updated')}}
                                <span class="status-badge status-updated">Yangilandi</span>
                                {{else if (eq this.status 'deleted')}}
                                <span class="status-badge status-deleted">O'chirildi</span>
                                {{/if}}
                            </td>
                            <td>{{this.operation}}</td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn edit-btn" onclick="editHistory('{{this._id}}')">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="action-btn delete-btn" onclick="showDeleteModal('{{this._id}}')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                {{#unless history.length}}
                <div id="emptyHistory" class="empty-history">
                    <i class="fas fa-history"></i>
                    <h3>Hozircha tarix mavjud emas</h3>
                    <p>Birinchi operatsiyani bajarish uchun formani to'ldiring</p>
                </div>
                {{/unless}}
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>O'chirishni tasdiqlash</h3>
                <p>Ushbu yozuvni o'chirishga ishonchingiz komilmi?</p>
            </div>
            <div id="modalMessage"></div>
            <div class="modal-buttons">
                <button id="confirmDeleteBtn" class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                    O'chirish
                </button>
                <button id="cancelDeleteBtn" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Bekor qilish
                </button>
            </div>
        </div>
    </div>

    <!-- Notification -->
    <div id="notification" class="notification">
        <i class="fas fa-check-circle"></i>
        <div class="notification-content">
            <h4 id="notificationTitle">Muvaffaqiyatli</h4>
            <p id="notificationMessage">Operatsiya muvaffaqiyatli bajarildi</p>
        </div>
    </div>

    <div class="footer">
       created by <span>Makhmudov</span> â€¢ Vaqt: <span id="currentTime"></span>
    </div>

    <script>
        // Serverdan kelgan ma'lumotlarni JavaScript obyektiga aylantirish
        let history = [
            {{#each history}}
            {
                _id: '{{this._id}}',
                band: '{{this.band}}',
                quantity: {{this.quantity}},
                status: '{{this.status}}',
                operation: '{{this.operation}}',
                date: '{{this.date}}',
                time: '{{this.time}}'
            }{{#unless @last}},{{/unless}}
            {{/each}}
        ];

        // Agar history bo'sh bo'lsa
        if (history.length === 1 && !history[0]._id) {
            history = [];
        }

        let currentEditId = null;
        let currentDeleteId = null;

        // DOM elementlari
        const bandSelect = document.getElementById('bandSelect');
        const quantityInput = document.getElementById('quantityInput');
        const saveBtn = document.getElementById('saveBtn');
        const editBtn = document.getElementById('editBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        const historyBody = document.getElementById('historyBody');
        const emptyHistory = document.getElementById('emptyHistory');
        const filterButtons = document.querySelectorAll('.filter-btn');
        const totalCount = document.getElementById('totalCount');
        const deleteModal = document.getElementById('deleteModal');
        const modalMessage = document.getElementById('modalMessage');
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');
        const currentTime = document.getElementById('currentTime');
        const notification = document.getElementById('notification');
        const notificationTitle = document.getElementById('notificationTitle');
        const notificationMessage = document.getElementById('notificationMessage');

        // Vaqtni yangilash
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('uz-UZ', { 
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit'
            });
            const dateString = now.toLocaleDateString('uz-UZ', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit'
            });
            currentTime.textContent = `${dateString} ${timeString}`;
        }

        // Notification ko'rsatish
        function showNotification(title, message, type = 'success') {
            notificationTitle.textContent = title;
            notificationMessage.textContent = message;
            
            const icon = notification.querySelector('i');
            if (type === 'success') {
                icon.className = 'fas fa-check-circle';
                icon.style.color = '#10b981';
                notification.style.borderLeftColor = '#10b981';
            } else if (type === 'error') {
                icon.className = 'fas fa-exclamation-circle';
                icon.style.color = '#ef4444';
                notification.style.borderLeftColor = '#ef4444';
            } else if (type === 'warning') {
                icon.className = 'fas fa-exclamation-triangle';
                icon.style.color = '#f59e0b';
                notification.style.borderLeftColor = '#f59e0b';
            } else if (type === 'info') {
                icon.className = 'fas fa-info-circle';
                icon.style.color = '#3b82f6';
                notification.style.borderLeftColor = '#3b82f6';
            }
            
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 5000);
        }

        // Tarixni chiqarish
        function renderHistory(filter = 'all') {
            const filteredHistory = filter === 'all' 
                ? history 
                : history.filter(item => item.status === filter);

            historyBody.innerHTML = '';

            if (filteredHistory.length === 0) {
                if (emptyHistory) emptyHistory.style.display = 'flex';
            } else {
                if (emptyHistory) emptyHistory.style.display = 'none';
                
                filteredHistory.forEach((item, index) => {
                    const row = document.createElement('tr');
                    
                    let statusBadge = '';
                    if (item.status === 'added') {
                        statusBadge = '<span class="status-badge status-added">Qo\'shildi</span>';
                    } else if (item.status === 'updated') {
                        statusBadge = '<span class="status-badge status-updated">Yangilandi</span>';
                    } else if (item.status === 'deleted') {
                        statusBadge = '<span class="status-badge status-deleted">O\'chirildi</span>';
                    }

                    row.innerHTML = `
                        <td>${index + 1}</td>
                        <td>${item.date}<br><small>${item.time}</small></td>
                        <td>${item.band}</td>
                        <td><strong>${item.quantity} ta</strong></td>
                        <td>${statusBadge}</td>
                        <td>${item.operation}</td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn edit-btn" onclick="editHistory('${item._id}')">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <button class="action-btn delete-btn" onclick="showDeleteModal('${item._id}')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        </td>
                    `;
                    
                    historyBody.appendChild(row);
                });
            }

            totalCount.textContent = `${filteredHistory.length} ta yozuv`;
        }

        // Filter tugmalari
        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                const filter = button.getAttribute('data-filter');
                renderHistory(filter);
            });
        });

        // Saqlash (API orqali)
        saveBtn.addEventListener('click', async () => {
            const band = bandSelect.value;
            const quantity = quantityInput.value.trim();

            if (!band) {
                showNotification('Xatolik', 'Iltimos, bandni tanlang!', 'warning');
                bandSelect.focus();
                return;
            }

            if (!quantity || isNaN(quantity) || quantity < 1) {
                showNotification('Xatolik', 'Iltimos, to\'g\'ri miqdor kiriting!', 'warning');
                quantityInput.focus();
                return;
            }

            try {
                const response = await fetch('/api/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ band, quantity })
                });

                const result = await response.json();
                
                if (result.success) {
                    // Yangi ma'lumotni history ga qo'shish
                    history.unshift(result.data);
                    renderHistory();
                    resetForm();
                    
                    // Grafikni yangilash uchun serverga so'rov yuborish
                    fetch('/api/grafik-data')
                        .then(res => res.json())
                        .then(data => {
                            console.log('Grafik ma\'lumotlari yangilandi:', data);
                        })
                        .catch(err => console.error('Grafik yangilashda xatolik:', err));
                    
                    showNotification('Muvaffaqiyatli', 
                        `${result.data.band} uchun ${result.data.quantity} ta ish qo'shildi`, 
                        'success');
                } else {
                    showNotification('Xatolik', result.message, 'error');
                }
            } catch (error) {
                console.error(error);
                showNotification('Xatolik', 'Server bilan aloqa xatosi', 'error');
            }
        });

        // Edit tugmasi
        function editHistory(id) {
            const entry = history.find(item => item._id === id);
            if (!entry) return;

            // Formani to'ldirish
            const bandOptions = Array.from(bandSelect.options);
            const optionIndex = bandOptions.findIndex(option => option.value === entry.band);
            if (optionIndex !== -1) {
                bandSelect.selectedIndex = optionIndex;
            }

            quantityInput.value = entry.quantity;
            currentEditId = id;

            // Tugmalarni almashtirish
            saveBtn.style.display = 'none';
            editBtn.style.display = 'flex';
            
            showNotification('Tahrirlash', 'Yozuvni tahrirlash rejimidasiz', 'info');
        }

        // Yangilash (API orqali)
        editBtn.addEventListener('click', async () => {
            if (!currentEditId) return;

            const quantity = quantityInput.value.trim();
            if (!quantity || isNaN(quantity) || quantity < 1) {
                showNotification('Xatolik', 'Iltimos, to\'g\'ri miqdor kiriting!', 'warning');
                quantityInput.focus();
                return;
            }

            try {
                const response = await fetch(`/api/update/${currentEditId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ quantity })
                });

                const result = await response.json();
                
                if (result.success) {
                    // History ni yangilash
                    const index = history.findIndex(item => item._id === currentEditId);
                    if (index !== -1) {
                        history[index] = result.data;
                    }
                    renderHistory();
                    resetForm();
                    
                    // Grafikni yangilash
                    fetch('/api/grafik-data')
                        .then(res => res.json())
                        .then(data => {
                            console.log('Grafik ma\'lumotlari yangilandi:', data);
                        })
                        .catch(err => console.error('Grafik yangilashda xatolik:', err));
                    
                    showNotification('Yangilandi', 
                        `${result.data.band} miqdori yangilandi`, 
                        'success');
                } else {
                    showNotification('Xatolik', result.message, 'error');
                }
            } catch (error) {
                console.error(error);
                showNotification('Xatolik', 'Yangilashda xatolik', 'error');
            }
        });

        // O'chirish modalini ko'rsatish
        function showDeleteModal(id) {
            const entry = history.find(item => item._id === id);
            if (!entry) return;

            currentDeleteId = id;
            modalMessage.innerHTML = `
                <div style="background: #f8fafc; padding: 16px; border-radius: 8px; margin: 16px 0;">
                    <p><strong>Band:</strong> ${entry.band}</p>
                    <p><strong>Miqdor:</strong> ${entry.quantity} ta</p>
                    <p><strong>Sana:</strong> ${entry.date} ${entry.time}</p>
                </div>
            `;
            
            deleteModal.style.display = 'flex';
        }

        // O'chirishni tasdiqlash (API orqali)
        confirmDeleteBtn.addEventListener('click', async () => {
            if (!currentDeleteId) return;

            try {
                const response = await fetch(`/api/delete/${currentDeleteId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();
                
                if (result.success) {
                    // History ni yangilash
                    const index = history.findIndex(item => item._id === currentDeleteId);
                    if (index !== -1) {
                        history[index] = result.data;
                    }
                    renderHistory();
                    deleteModal.style.display = 'none';
                    
                    // Grafikni yangilash
                    fetch('/api/grafik-data')
                        .then(res => res.json())
                        .then(data => {
                            console.log('Grafik ma\'lumotlari yangilandi:', data);
                        })
                        .catch(err => console.error('Grafik yangilashda xatolik:', err));
                    
                    showNotification('O\'chirildi', 
                        `${result.data.band} yozuvi o'chirildi`, 
                        'success');
                } else {
                    showNotification('Xatolik', result.message, 'error');
                }
            } catch (error) {
                console.error(error);
                showNotification('Xatolik', 'O\'chirishda xatolik', 'error');
            }
        });

        // O'chirishni bekor qilish
        cancelDeleteBtn.addEventListener('click', () => {
            deleteModal.style.display = 'none';
            currentDeleteId = null;
        });

        // Bekor qilish
        cancelBtn.addEventListener('click', () => {
            resetForm();
            showNotification('Bekor qilindi', 'Tahrirlash bekor qilindi', 'info');
        });

        // Formani tozalash
        function resetForm() {
            bandSelect.selectedIndex = 0;
            quantityInput.value = '';
            currentEditId = null;
            saveBtn.style.display = 'flex';
            editBtn.style.display = 'none';
        }

        // Modalni yopish
        window.addEventListener('click', (e) => {
            if (e.target === deleteModal) {
                deleteModal.style.display = 'none';
            }
        });

        // Klaviatura yordamida modalni yopish
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && deleteModal.style.display === 'flex') {
                deleteModal.style.display = 'none';
            }
        });

        // Dasturni boshlash
        document.addEventListener('DOMContentLoaded', () => {
            updateTime();
            setInterval(updateTime, 1000);
            renderHistory();
            
            // Sahifa yangilanganida ma'lumotlarni yangilash
            setInterval(() => {
                fetch('/api/data')
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            history = data.data;
                            renderHistory();
                        }
                    })
                    .catch(err => console.error('Ma\'lumotlarni yangilashda xatolik:', err));
            }, 30000); // Har 30 sekundda yangilash
        });

        // Sayt yuklanganida animatsiya
        window.addEventListener('load', () => {
            document.body.style.transition = 'opacity 0.3s';
            document.body.style.opacity = '1';
        });
    </script>
</body>
