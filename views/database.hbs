<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .nav {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .nav-btn {
            padding: 12px 24px;
            background: white;
            border: 2px solid #3b82f6;
            border-radius: 12px;
            color: #3b82f6;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav-btn:hover {
            background: #3b82f6;
            color: white;
            transform: translateY(-2px);
        }

        .nav-btn.active {
            background: #3b82f6;
            color: white;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .header h1 {
            color: #1e293b;
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .header p {
            color: #64748b;
            font-size: 1.1rem;
        }

        /* Reyting section */
        .ranking-section {
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
            margin-bottom: 30px;
        }

        .ranking-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .ranking-header h2 {
            color: #1e293b;
            font-size: 1.8rem;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .ranking-header .month {
            color: #3b82f6;
            font-weight: 700;
            background: #f0f9ff;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 1rem;
        }

        .ranking-cards {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .ranking-card {
            flex: 1;
            min-width: 300px;
            max-width: 400px;
            padding: 25px;
            border-radius: 12px;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .ranking-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .ranking-card.first {
            background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
            color: #000;
        }

        .ranking-card.second {
            background: linear-gradient(135deg, #C0C0C0 0%, #A0A0A0 100%);
            color: #000;
        }

        .ranking-card.third {
            background: linear-gradient(135deg, #CD7F32 0%, #A0522D 100%);
            color: #fff;
        }

        .ranking-medal {
            font-size: 48px;
            margin-bottom: 15px;
            display: inline-block;
        }

        .ranking-title {
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .ranking-band {
            font-size: 28px;
            font-weight: 800;
            margin: 15px 0;
            color: inherit;
        }

        .ranking-quantity {
            font-size: 36px;
            font-weight: 900;
            margin: 10px 0;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }

        .ranking-label {
            font-size: 14px;
            opacity: 0.9;
            margin-top: 5px;
        }

        .ranking-celebration {
            text-align: center;
            margin-top: 20px;
            padding: 15px;
            background: linear-gradient(90deg, #e63946, #f4a261);
            color: white;
            border-radius: 10px;
            font-weight: 600;
            animation: celebration 2s infinite alternate;
        }

        @keyframes celebration {
            0% { transform: scale(1); }
            100% { transform: scale(1.02); }
        }

        .table-container {
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
            margin-top: 20px;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1000px;
        }

        th {
            background: #f1f5f9;
            padding: 16px;
            text-align: left;
            font-weight: 600;
            color: #475569;
            border-bottom: 2px solid #e2e8f0;
        }

        td {
            padding: 14px 16px;
            border-bottom: 1px solid #f1f5f9;
            color: #475569;
        }

        tr:hover {
            background: #f8fafc;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
        }

        .status-added {
            background: rgba(16, 185, 129, 0.1);
            color: #059669;
        }

        .status-updated {
            background: rgba(59, 130, 246, 0.1);
            color: #2563eb;
        }

        .status-deleted {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #e2e8f0;
            color: #64748b;
        }

        .footer span {
            color: #3b82f6;
            font-weight: 600;
        }

        @media (max-width: 768px) {
            .table-container {
                padding: 20px;
            }
            
            .header h1 {
                font-size: 1.5rem;
            }
            
            th, td {
                padding: 12px;
            }
            
            .ranking-cards {
                flex-direction: column;
            }
            
            .ranking-card {
                min-width: 100%;
            }
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="nav">
        <a href="/user" class="nav-btn">
            <i class="fas fa-tachometer-alt"></i> Nazorat Paneli
        </a>
        <a href="/grafik" class="nav-btn">
            <i class="fas fa-chart-bar"></i> Grafik
        </a>
        <a href="/database" class="nav-btn active">
            <i class="fas fa-database"></i> Ma'lumotlar Bazasi
        </a>
    </div>
         <marquee behavior="scroll" direction="left" scrollamount="6">
        ðŸš¨ Iltimos, tozalikni saqlang! ðŸš¨
    </marquee>

    <div class="container">
        <div class="header">
            <h1>Ma'lumotlar Bazasi</h1>
            <p>Barcha tikuv operatsiyalari tarixi ({{data.length}} ta yozuv)</p>
        </div>

        {{#if monthlyRankings.length}}
        <div class="ranking-section">
            <div class="ranking-header">
                <h2>
                    <i class="fas fa-trophy"></i> Oylik eng yaxshi 3 ta band
                    <span class="month">{{currentMonth}}</span>
                </h2>
                <p style="color: #64748b; font-size: 1rem;">
                    Bu oyning eng ko'p ishlagan tikuv bandlari
                </p>
            </div>

            <div class="ranking-celebration">
                <i class="fas fa-star"></i> Tabriklaymiz! Quyidagi bandlar bu oyning g'oliblari!
                <i class="fas fa-star"></i>
            </div>

            <div class="ranking-cards">
                {{#each monthlyRankings}}
                <div class="ranking-card {{#if (eq this.rank 1)}}first{{else if (eq this.rank 2)}}second{{else}}third{{/if}}">
                    <div class="ranking-medal">
                        {{#if (eq this.rank 1)}}
                        <i class="fas fa-trophy"></i>
                        {{else if (eq this.rank 2)}}
                        <i class="fas fa-medal"></i>
                        {{else}}
                        <i class="fas fa-award"></i>
                        {{/if}}
                    </div>
                    <div class="ranking-title">
                        {{#if (eq this.rank 1)}}
                        BIRINCHI O'RIN
                        {{else if (eq this.rank 2)}}
                        IKINCHI O'RIN
                        {{else}}
                        UCHINCHI O'RIN
                        {{/if}}
                    </div>
                    <div class="ranking-band">
                        {{this.band}}
                    </div>
                    <div class="ranking-quantity">
                        {{this.totalQuantity}} ta
                    </div>
                    <div class="ranking-label">
                        Bu oyda jami ishlagan ish soni
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{else}}
        <div class="ranking-section" style="text-align: center; padding: 40px;">
            <i class="fas fa-chart-line" style="font-size: 48px; color: #cbd5e1; margin-bottom: 20px;"></i>
            <h3 style="color: #64748b;">Hozircha oylik reyting mavjud emas</h3>
            <p style="color: #94a3b8;">Oy oxirida eng yaxshi 3 ta band aniqlanadi</p>
        </div>
        {{/if}}

        <div class="table-container">
            <h3 style="margin-bottom: 20px; color: #1e293b;">
                <i class="fas fa-history"></i> Barcha operatsiyalar
            </h3>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Sana</th>
                        <th>Vaqt</th>
                        <th>Band</th>
                        <th>Miqdor</th>
                        <th>Holat</th>
                        <th>Operatsiya</th>
                        <th>Yaratilgan vaqt</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.time}}</td>
                        <td>{{this.band}}</td>
                        <td><strong>{{this.quantity}} ta</strong></td>
                        <td>
                            {{#if (eq this.status 'added')}}
                            <span class="status-badge status-added">Qo'shildi</span>
                            {{else if (eq this.status 'updated')}}
                            <span class="status-badge status-updated">Yangilandi</span>
                            {{else if (eq this.status 'deleted')}}
                            <span class="status-badge status-deleted">O'chirildi</span>
                            {{/if}}
                        </td>
                        <td>{{this.operation}}</td>
                        <td>{{formatDate this.createdAt}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{#if monthlyData.length}}
        <div class="table-container" style="margin-top: 30px;">
            <h3 style="margin-bottom: 20px; color: #1e293b;">
                <i class="fas fa-chart-line"></i> Kunlik statistika
            </h3>
            <table>
                <thead>
                    <tr>
                        <th>Sana</th>
                        <th>Jami tikuv</th>
                        <th>Upakovka</th>
                        <th>Dazmol</th>
                        <th>Jami operatsiyalar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each monthlyData}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td><strong>{{this.totalSewing}} ta</strong></td>
                        <td>{{this.totalUpakovka}} ta</td>
                        <td>{{this.totalDazmol}} ta</td>
                        <td>{{this.count}} ta</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{/if}}

        <div class="footer">
            created by <span>Makhmudov</span> â€¢ Jami yozuvlar: <span>{{data.length}} ta</span>
        </div>
    </div>

    <script>
        // Sana formatlash funksiyasi
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleString('uz-UZ');
        }

        // Har bir satr uchun sanani formatlash
        document.querySelectorAll('td:last-child').forEach(td => {
            if (td.textContent.includes('T')) {
                td.textContent = formatDate(td.textContent);
            }
        });

        // Reyting kartalari uchun hover effekti
        document.addEventListener('DOMContentLoaded', () => {
            const rankingCards = document.querySelectorAll('.ranking-card');
            rankingCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    const medal = this.querySelector('.ranking-medal i');
                    medal.style.transform = 'scale(1.2)';
                    medal.style.transition = 'transform 0.3s ease';
                });
                
                card.addEventListener('mouseleave', function() {
                    const medal = this.querySelector('.ranking-medal i');
                    medal.style.transform = 'scale(1)';
                });
            });
        });
    </script>
</body>
</html>